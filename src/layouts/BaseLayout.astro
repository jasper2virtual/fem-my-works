---
import BaseFooter from '@components/BaseFooter.astro'
interface Props {
    title?: string,
    challengeUrl: string,
    repoUrl: string,
    mainClass?: string,
    layoutClass?: string,
    headerClass?: string,
    footerClass?: string
}
const {title, challengeUrl, repoUrl, mainClass, layoutClass, headerClass, footerClass} = Astro.props
---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <title>Frontend Mentor | {title}</title>
</head>
<body class="tw-px-4">
    <div class={'tw-flex tw-flex-col tw-min-h-screen tw-mx-auto tw-px-4 ' + layoutClass}>
        <header class={headerClass}>
        </header>
        <main class={'tw-grow ' + mainClass}>
            <slot/>
        </main>
        <footer class={footerClass}>
            <BaseFooter challengeUrl={challengeUrl} repoUrl={repoUrl}/>
        </footer>
    </div>
</body>
</html>